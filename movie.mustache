<div id="{{title}}" class="movie">
<figure>
    <img class="movie_img" src="{{thumbPath}}" alt="movie picture"/>
        <figcaption>
            <p class="movie__synopsis small">
                {{synopsis}}
            </p>
            <a href="#" class="movie__trailer"> watch trailer </a>
        </figcaption>
    </figure>
    <div class="movie__informations">
        <div class="movie__header">
            <h2 class="movie__title">{{title}}</h2>
            <p class="movie__year">{{year}}</p>
        </div>
        <div class="movie__details">
            <ul>
                <li>Running Time <span class="movie__running"> {{runningTime}} <span></span> </li>
                <li>Directed by <span class="movie__director">{{director}}</span></li>
                <li><span class="movie__tag">{{tag}}</span></li>
            </ul>
        </div>
    </div>
    </div>
